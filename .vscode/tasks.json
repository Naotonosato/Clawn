{
    "tasks": [
        {
            "type": "shell",
            "label": "count lines(.cpp,hpp,yy,ll) without auto-generations(by bison,flex)",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "wc",
            "args": [
                "-l",
                "./src/**/*.(([ch]pp)|(ll)|(yy))"
            ]
        },
        {
            "type": "shell",
            "label": "format c++ code",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "python3",
            "args": [
                "./dev_utils/format_cpp.py",
                "./src"
            ]
        },
        {
            "type": "shell",
            "label": "cmake",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "command": "cmake",
            "args": [
                "${workspaceFolder}"
            ]
        },
        {
            "type": "shell",
            "label": "build",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "command": "make",
            "dependsOn": "cmake",
            "args": [
                "build_clawn",
                "-j12"
            ]
        },
        {
            "type": "shell",
            "label": "build_tests",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "command": "make",
            "dependsOn": "cmake",
            "args": [
                "build_test",
                "-j12"
            ]
        },
        {
            "type": "shell",
            "label": "build and run",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "command": "./clawn ${workspaceFolder}/test/resources/test.clawn;",
            "args": [],
            "dependsOn": "build",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "run",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "command": "./clawn ${workspaceFolder}/test/resources/test.clawn;",
            "args": [],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "build and run all tests",
            "command": "./clawn_test",
            "dependsOn": "build_tests",
            "options": {
                "cwd": "${workspaceFolder}/build/test"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "debug tests",
            "command": "lldb ./clawn_test",
            "dependsOn": "build_tests",
            "options": {
                "cwd": "${workspaceFolder}/build/test"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}